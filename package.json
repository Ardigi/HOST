{
  "name": "host-pos",
  "version": "0.1.0",
  "private": true,
  "description": "HOST - Modern POS System for Hospitality",
  "author": "Pour People",
  "license": "UNLICENSED",
  "packageManager": "npm@10.8.3",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "vitest": "2.1.9",
    "@vitest/browser": "2.1.9",
    "@vitest/coverage-v8": "2.1.9",
    "vite": "5.4.20"
  },
  "workspaces": ["apps/*", "packages/*", "services/*"],
  "scripts": {
    "dev": "turbo run dev",
    "dev:pos": "turbo run dev --filter=@host/pos",
    "dev:kds": "turbo run dev --filter=@host/kds",
    "dev:admin": "turbo run dev --filter=@host/admin",
    "build": "turbo run build",
    "build:fresh": "npm run clean && turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "playwright test",
    "test:coverage": "turbo run test:coverage",
    "test:ci": "turbo run test:ci",
    "lint": "npm run lint:biome && npm run lint:eslint",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint \"**/*.svelte\"",
    "lint:fix": "npm run lint:biome -- --write && npm run lint:eslint -- --fix",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "check:all": "npm run lint && npm run typecheck && npm run test:unit",
    "check:deps": "npm list --all --depth=0",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:build": "turbo run clean",
    "clean:turbo": "rm -rf .turbo",
    "db:migrate": "turbo run db:migrate",
    "db:migrate:create": "turbo run db:migrate:create",
    "db:migrate:rollback": "turbo run db:migrate:rollback",
    "db:reset": "turbo run db:reset",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "generate:component": "plop component",
    "generate:api": "plop api",
    "generate:migration": "plop migration",
    "deps:update": "npm update --workspaces",
    "deps:check": "npm outdated --workspaces",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "install:all": "npm install && turbo run build --filter=@host/shared"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.10",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "msw": "^2.11.3",
    "picomatch": "^4.0.3",
    "plop": "^4.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.45.0",
    "vitest-axe": "^0.1.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": ["biome check --write"],
    "*.svelte": ["eslint --fix"]
  },
  "dependencies": {
    "@auth/sveltekit": "^1.10.0",
    "jose": "^6.1.0"
  }
}
